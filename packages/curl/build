#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --enable-static \
            --disable-shared \
            --disable-debug \
            --enable-http \
            --enable-ftp \
            --enable-file \
            --disable-ldap \
            --enable-proxy \
            --disable-ipv6 \
            --enable-thread \
            --without-gnutls \
            --without-ssl \

# Only for static linking
sed -i 's,\(Cflags:.*\),\1 -DPTW32_STATIC_LIB -DCURL_STATICLIB,' libcurl.pc
sed -i 's,\(Libs:.*\),\1 -lwsock32,' libcurl.pc

make
make install
